<web-app>
	<display-name>Aplicaci√≥n Web de Prueba</display-name>
	<context-param>
        <param-name>log</param-name>
        <param-value>/log</param-value>
    </context-param>
	<context-param>
        <param-name>debug</param-name>
        <param-value>1</param-value>
    </context-param>
	<servlet>
		<servlet-name>MuestraVariablesServidor</servlet-name>
		<servlet-class>MuestraVariablesServidor</servlet-class>
		<init-param>
			<param-name>usuarioRemoto</param-name>
			<param-value>aruiz</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>servletDeEjemplo</servlet-name>
		<servlet-class>EjemploServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>servletGenericoDeEjemplo</servlet-name>
		<servlet-class>EjemploServletGenerico</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>servletHttpDeEjemplo</servlet-name>
		<servlet-class>EjemploServletHttp</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>servletDeEjemplo</servlet-name>
		<url-pattern>/pruebaServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>servletGenericoDeEjemplo</servlet-name>
		<url-pattern>/pruebaServletGenerico</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>servletHttpDeEjemplo</servlet-name>
		<url-pattern>/pruebaServletHttp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MuestraVariablesServidor</servlet-name>
		<url-pattern>/MuestraVariablesServidor</url-pattern>
		<url-pattern>/MuestraVariables</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<error-code>404</error-code>
		<location>/error404.html</location>
	</error-page>
	
</web-app>




